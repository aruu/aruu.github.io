{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [ {
    // Prevent access of files which exist in root
    	"source" : "*",
    	"destination" : "https://aruu.github.io/",
    	"type" : 302
    }, {
    // Redirect from root to github.io site
    // Allow access of assets/*, 404's redirect to root which falls under this
    	"source" : "/",
    	"destination" : "https://aruu.github.io/",
    	"type" : 302
    } ]
  }
}
